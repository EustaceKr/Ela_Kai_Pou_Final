@model Ela_Kai_Pou.Entities.Models.Coffee

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<section>
    <h3>Are you sure you want to delete this?</h3>
    <hr />
    <div>
        <dl class="dl-horizontal">
            <dt>
                Product Name : @Html.DisplayFor(model => model.Name)
            </dt>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger" />
                
            </div>
        }
    </div>
    <br />
    <div>
        <input type="button" class="btn btn-lg btn-secondary adminBtn" value="Back to list" onclick="location.href='@Url.Action("Index","Product", new { Area = "Admin"})'" />
    </div>
</section>
